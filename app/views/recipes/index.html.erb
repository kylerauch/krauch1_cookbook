<p id="notice"><%= notice %></p>

<%= render "/shared/search" %>
<h1>Listing Recipes</h1>

<table>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>Last Updated</th>
      <th colspan="2">&nbsp;</th>
    </tr>

    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= link_to recipe.title, recipe %></td>
        <td><%= recipe.category.name rescue "No category" %></td>
        <td><%= time_ago_in_words(recipe.updated_at) %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= button_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
</table>

<% if logged_in? %>
  <%= link_to 'New Recipe', new_recipe_path %>
<% end %> 
